# ============================================
# SATYA MARKETPLACE ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================

# Network Configuration
NODE_ENV=development
NETWORK=testnet

# ============================================
# SUI NETWORK CONFIGURATION
# ============================================

# Sui Network Settings
SUI_NETWORK=testnet
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_WEBSOCKET_URL=wss://fullnode.testnet.sui.io:9001

# Wallet Configuration (NEVER commit real private keys!)
SUI_PRIVATE_KEY=your_private_key_here
SUI_WALLET_ADDRESS=your_wallet_address_here

# ============================================
# MARKETPLACE CONTRACT ADDRESSES (TESTNET)
# ============================================

# Marketplace Contracts (Fill after deployment)
MARKETPLACE_PACKAGE_ID=your_marketplace_package_id
MARKETPLACE_ADMIN_CAP_ID=your_admin_cap_id
VERIFIER_ADMIN_CAP_ID=your_verifier_admin_cap_id

# Treasury Configuration
TREASURY_ADDRESS=your_treasury_address

# ============================================
# SEAL ENCRYPTION CONFIGURATION
# ============================================

# Seal Contract
SEAL_PACKAGE_ID=your_seal_package_id
SEAL_UPGRADE_CAP_ID=your_seal_upgrade_cap_id

# Seal Key Servers (Testnet)
SEAL_KEY_SERVER_1_OBJECT_ID=your_key_server_1_object_id
SEAL_KEY_SERVER_1_URL=https://seal-key-server-testnet-1.mystenlabs.com
SEAL_KEY_SERVER_2_OBJECT_ID=your_key_server_2_object_id
SEAL_KEY_SERVER_2_URL=https://seal-key-server-testnet-2.mystenlabs.com

# Seal Configuration
SEAL_THRESHOLD=2
SEAL_DEFAULT_EPOCHS=200
SEAL_SESSION_TTL_MINUTES=30
SEAL_CACHE_SIZE=100
SEAL_MAX_RETRIES=3

# ============================================
# WALRUS STORAGE CONFIGURATION
# ============================================

# Walrus Network Endpoints
WALRUS_AGGREGATOR=https://aggregator-devnet.walrus.space
WALRUS_PUBLISHER=https://publisher-devnet.walrus.space
WALRUS_SYSTEM_OBJECT=your_walrus_system_object_id

# Walrus Storage Configuration
WALRUS_DEFAULT_EPOCHS=5
WALRUS_MAX_FILE_SIZE=1073741824
WALRUS_CHUNK_SIZE=10485760
WALRUS_MAX_RETRIES=3
WALRUS_CACHE_SIZE_MB=100

# ============================================
# MARKETPLACE SETTINGS
# ============================================

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=250
FEE_DENOMINATOR=10000
DEFAULT_ACCESS_DURATION_MS=2592000000
ATTESTATION_VALIDITY_MS=86400000

# Gas Configuration
DEFAULT_GAS_BUDGET=100000000
MAX_GAS_BUDGET=1000000000

# ============================================
# API & SERVICE CONFIGURATION
# ============================================

# Service Configuration
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# ============================================
# MONITORING & LOGGING
# ============================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL_MS=30000

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Management
SESSION_SECRET=change-this-in-production
SESSION_TTL_HOURS=24

# ============================================
# DEVELOPMENT & TESTING
# ============================================

# Development Settings
DEBUG_MODE=true
VERBOSE_LOGGING=false

# Performance Settings
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT_MS=30000
PARALLEL_UPLOADS=3
PARALLEL_DOWNLOADS=5