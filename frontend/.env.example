# Frontend Environment Configuration Example - Satya Marketplace
# Copy this file to .env.local and update with your values

# ============================================
# NEXT.JS PUBLIC VARIABLES (FRONTEND ACCESSIBLE)
# ============================================

# Network Configuration
NEXT_PUBLIC_NODE_ENV=development
NEXT_PUBLIC_NETWORK=testnet

# Sui Network Settings
NEXT_PUBLIC_SUI_NETWORK=testnet
NEXT_PUBLIC_SUI_RPC_URL=https://fullnode.testnet.sui.io:443
NEXT_PUBLIC_SUI_WEBSOCKET_URL=wss://fullnode.testnet.sui.io:9001

# ============================================
# MARKETPLACE CONTRACT ADDRESSES (TESTNET)
# ============================================

# Marketplace Contracts (UPDATE WITH YOUR DEPLOYED ADDRESSES)
NEXT_PUBLIC_MARKETPLACE_PACKAGE_ID=0x...
NEXT_PUBLIC_MARKETPLACE_V2_OBJECT_ID=0x...
NEXT_PUBLIC_MARKETPLACE_V2_ADMIN_CAP=0x...

# Treasury Configuration
NEXT_PUBLIC_TREASURY_ADDRESS=0x...

# ============================================
# SEAL ENCRYPTION CONFIGURATION
# ============================================

# Seal Contract (UPDATE WITH YOUR DEPLOYED ADDRESSES)
NEXT_PUBLIC_SEAL_PACKAGE_ID=0x...
NEXT_PUBLIC_SEAL_UPGRADE_CAP_ID=0x...

# Seal Key Servers (Testnet)
NEXT_PUBLIC_SEAL_KEY_SERVER_1_OBJECT_ID=0x...
NEXT_PUBLIC_SEAL_KEY_SERVER_1_URL=https://seal-key-server-testnet-1.mystenlabs.com
NEXT_PUBLIC_SEAL_KEY_SERVER_2_OBJECT_ID=0x...
NEXT_PUBLIC_SEAL_KEY_SERVER_2_URL=https://seal-key-server-testnet-2.mystenlabs.com

# Seal Configuration
NEXT_PUBLIC_SEAL_THRESHOLD=2
NEXT_PUBLIC_SEAL_DEFAULT_EPOCHS=200
NEXT_PUBLIC_SEAL_SESSION_TTL_MINUTES=30
NEXT_PUBLIC_SEAL_CACHE_SIZE=100
NEXT_PUBLIC_SEAL_MAX_RETRIES=3

# ============================================
# WALRUS STORAGE CONFIGURATION
# ============================================

# Walrus Network Endpoints
NEXT_PUBLIC_WALRUS_AGGREGATOR=https://aggregator-devnet.walrus.space
NEXT_PUBLIC_WALRUS_PUBLISHER=https://publisher-devnet.walrus.space
NEXT_PUBLIC_WALRUS_SYSTEM_OBJECT=0x...

# Walrus Storage Configuration
NEXT_PUBLIC_WALRUS_DEFAULT_EPOCHS=5
NEXT_PUBLIC_WALRUS_MAX_FILE_SIZE=1073741824
NEXT_PUBLIC_WALRUS_CHUNK_SIZE=10485760
NEXT_PUBLIC_WALRUS_MAX_RETRIES=3
NEXT_PUBLIC_WALRUS_CACHE_SIZE_MB=100

# Walrus Storage Nodes
NEXT_PUBLIC_WALRUS_STORAGE_NODE_1=https://wal-testnet-stor-nest-01.walrus.space:11444
NEXT_PUBLIC_WALRUS_STORAGE_NODE_2=https://wal-testnet-stor-nest-02.walrus.space:11444
NEXT_PUBLIC_WALRUS_STORAGE_NODE_3=https://wal-testnet-stor-nest-03.walrus.space:11444
NEXT_PUBLIC_WALRUS_STORAGE_NODE_4=https://wal-testnet-stor-nest-04.walrus.space:11444
NEXT_PUBLIC_WALRUS_STORAGE_NODE_5=https://wal-testnet-stor-nest-05.walrus.space:11444

# ============================================
# MARKETPLACE SETTINGS
# ============================================

# Platform Configuration
NEXT_PUBLIC_PLATFORM_FEE_PERCENTAGE=250
NEXT_PUBLIC_FEE_DENOMINATOR=10000
NEXT_PUBLIC_DEFAULT_ACCESS_DURATION_MS=2592000000
NEXT_PUBLIC_ATTESTATION_VALIDITY_MS=86400000

# Gas Configuration
NEXT_PUBLIC_DEFAULT_GAS_BUDGET=100000000
NEXT_PUBLIC_MAX_GAS_BUDGET=1000000000

# ============================================
# API & SERVICE CONFIGURATION
# ============================================

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_API_PORT=3001

# CORS Configuration
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Parallel Processing
NEXT_PUBLIC_PARALLEL_UPLOADS=3
NEXT_PUBLIC_PARALLEL_DOWNLOADS=5
NEXT_PUBLIC_PARALLEL_VERIFICATIONS=2

# Cache Settings
NEXT_PUBLIC_CACHE_TTL_SECONDS=1800
NEXT_PUBLIC_CACHE_MAX_SIZE=1000

# ============================================
# DEVELOPMENT & TESTING
# ============================================

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Mock Services (for testing)
NEXT_PUBLIC_MOCK_WALRUS=false
NEXT_PUBLIC_MOCK_SEAL=false
NEXT_PUBLIC_MOCK_SUI=false